{
   "type" : "fedora-river",
   "jms" : {
      "topicFilter" : "fedora.apim.update",
      "brokerUrl" : "<%= @jms_broker_url %>",
      "messageSelector" : "methodName LIKE 'modify%' OR methodName LIKE 'add%' OR methodName LIKE 'purge%' OR methodName = 'ingest'"
   },
   "fedora" : {
      "url" : "<%= @fedora_url %>",
      "password" : "<%= @fedora_password %>",
      "username" : "<%= @fedora_username %>"
   },
   "index" : {
      "exclude_datastreams" : [
         "DC",
         "RELS-EXT",
         "RELS-INT",
         "POLICY",
         "QUCOSA-XML",
         "MODS",
         "SLUB-INFO"
      ],
      "dissemination" : {
         "relevant_datastreams" : [
            "MODS",
            "SLUB-INFO"
         ],
         "properties" : {
            "PUB_TYPE" : {
               "store" : true,
               "index" : "not_analyzed",
               "type" : "string"
            },
            "PUB_URN" : {
               "index" : "not_analyzed",
               "store" : true,
               "type" : "string"
            }
         },
         "sdef_pid" : "qucosa:SDef",
         "method" : "getIndexDocument"
      },
      "pid_match" : "^qucosa:\\d+$",
      "name" : "fedora"
   },
   "oai" : {
      "url" : "<%= @fedora_url %>/oai",
      "poll_interval" : "5m"
   }
}
